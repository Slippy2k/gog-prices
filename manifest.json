{
    "manifest_version": 3,
    "name": "GOG Prices",
    "description": "Prices on GOG according to region.",
    "version": "0.0.3",
    "action": {
        "default_popup": "index.html",
        "default_icon": "assets/gog-prices.png"
    },
    "host_permissions": [
        "https://www.gog.com/*"
    ],
    "content_scripts": [
        {
            "js": ["scripts/bg.js"],
            "css": ["styles/styles.css"],
            "matches": ["https://www.gog.com/*"]
        }
    ],
    "web_accessible_resources": [{
        "resources": ["assets/flags/*.png"],
        "matches": ["https://www.gog.com/*"]
    }]
  }